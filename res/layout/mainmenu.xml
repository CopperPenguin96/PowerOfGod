<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:background="@drawable/jesus">

	<Button
		android:layout_height="wrap_content"
		android:text="Sundays"
		android:layout_width="115dp"
		android:id="@+id/btnSunday"
		android:onClick="sundayClick"/>

	<Button
		android:layout_height="wrap_content"
		android:text="Thursday"
		android:onClick="thursdayClick"
		android:layout_width="wrap_content"
		android:layout_below="@id/btnSunday"
		android:id="@+id/btnThursday"
		android:layout_alignRight="@id/btnSunday"
		android:layout_alignLeft="@id/btnSunday"/>

	<Button
		android:layout_height="wrap_content"
		android:text="Quizzes"
		android:onClick="quizClick"
		android:layout_width="wrap_content"
		android:layout_below="@id/btnThursday"
		android:layout_alignRight="@id/btnThursday"
		android:layout_alignLeft="@id/btnThursday"
		android:id="@+id/btnQuizzes"/>

	<Button
		android:layout_height="wrap_content"
		android:text="Bible Plans"
		android:onClick="getPlans"
		android:layout_width="wrap_content"
		android:layout_below="@id/btnQuizzes"
		android:layout_alignLeft="@id/btnQuizzes"
		android:layout_alignRight="@id/btnQuizzes"
		android:id="@+id/btnBibPlans"/>

</RelativeLayout>




