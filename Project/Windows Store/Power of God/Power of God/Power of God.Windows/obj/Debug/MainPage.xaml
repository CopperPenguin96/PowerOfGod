<Page
    x:Class="Power_of_God.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Power_of_God"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="429*"/>
            <ColumnDefinition Width="254*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="image" HorizontalAlignment="Left" Height="85" Margin="10,10,0,0" VerticalAlignment="Top" Width="497" Source="http://godispower.us/images/main.png"/>
        <TextBlock x:ConnectionId='1' x:Name="lblVersion" HorizontalAlignment="Left" Margin="25,85,0,0" TextWrapping="Wrap" Text="Version: " VerticalAlignment="Top" Width="352"                                              />
        <Button x:ConnectionId='2' x:Name="btnPurpose" Content="Purpose" HorizontalAlignment="Left" Margin="22,102,0,0" VerticalAlignment="Top" Width="184" Height="38"                         />
        <Button x:ConnectionId='3' x:Name="btnLessons" Content="Current Lesson" HorizontalAlignment="Left" Margin="22,139,0,0" VerticalAlignment="Top" Width="184" Height="38"                         />
        <Button x:ConnectionId='4' x:Name="btnBibPlans" Content="Bible Plans" HorizontalAlignment="Left" Margin="22,176,0,0" VerticalAlignment="Top" Width="184" Height="38"                          />
        <Button x:ConnectionId='5' x:Name="btnDailyScripture" Content="Daily Scripture" HorizontalAlignment="Left" Margin="22,213,0,0" VerticalAlignment="Top" Width="184" Height="38"                                />
        <Button x:ConnectionId='6' x:Name="btnRadio" Content="Radio" HorizontalAlignment="Left" Margin="22,250,0,0" VerticalAlignment="Top" Width="184" Height="38"                       />
        <Button x:ConnectionId='7' x:Name="btnAbout" Content="About" HorizontalAlignment="Left" Margin="22,287,0,0" VerticalAlignment="Top" Width="184" Height="38"                       />
        <WebView x:Name="ContentBrowser" Margin="208,103,0,0" Source="http://godispower.us/Purpose.html" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2"/>

    </Grid>
</Page>

